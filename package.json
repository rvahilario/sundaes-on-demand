{
	"name": "sundaes-on-demand",
	"description": "Application developed in Udemy course about Jest and Testing Library.",
	"version": "1.0.0",
	"private": true,
	"author": "Renan HilÃ¡rio <rvahilario@gmail> (@rvahilario)",
