	"keywords": [
		"nextjs",
		"starter",
		"typescript",
		"jest",
		"testing-library",
		"styled-components",
		"plop"
	],
	"scripts": {
		"dev": "next",
		"build": "next build",
		"start": "next start",
		"test": "jest",
		"test-watch": "yarn test --watch",
		"type-check": "tsc",
		"lint": "eslint --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\"",
		"format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\" --write",
		"husky": "husky install",
		"gen": "yarn plop --plopfile ./generators/plopfile.js",
		"cz": "cz"
	},
	"lint-staged": {
		"./src/**/*.{ts,js,jsx,tsx}": [
			"yarn lint --fix",
			"yarn format"
		]
	},
	"dependencies": {
		"next": "12.0.10",
		"react": "17.0.2",
		"react-dom": "17.0.2",
		"styled-components": "5.3.3"
	},
